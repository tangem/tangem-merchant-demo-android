<?xml version="1.0" encoding="utf-8"?>
<com.tangem.merchant.application.ui.main.rippleView.RippleView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pin_code_keyboard_button_ripple"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:paddingTop="@dimen/keyboard_button_padding"
    android:paddingBottom="@dimen/keyboard_button_padding"
    app:rv_centered="true"
    app:rv_color="@color/rippleColor"
    app:rv_rippleDuration="150"
    app:rv_ripplePadding="@dimen/keyboard_button_ripple_padding">

    <TextView
        android:id="@+id/keyboard_button_textview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:singleLine="true"
        tools:text="5" />

    <ImageView
        android:id="@+id/keyboard_button_imageview"
        android:layout_width="@dimen/keyboard_button_image_size"
        android:layout_height="@dimen/keyboard_button_image_size"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:visibility="gone" />

</com.tangem.merchant.application.ui.main.rippleView.RippleView>